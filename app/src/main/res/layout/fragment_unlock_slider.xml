<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerInParent="true"
    tools:context="babu.com.lockscreentest.UnlockSliderFragment"
    android:clipChildren="false"
     >

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >
            <SeekBar
                android:id="@+id/unlock_slider"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:progressDrawable="@drawable/apptheme_scrubber_progress_horizontal_holo_light"
                android:indeterminateDrawable="@drawable/apptheme_scrubber_progress_horizontal_holo_light"
                android:minHeight="13dip"
                android:maxHeight="13dip"
                android:thumb="@drawable/apptheme_scrubber_control_selector_holo_light"
                android:thumbOffset="16dip"
                android:paddingLeft="16dip"
                android:paddingRight="16dip"
                android:layout_centerInParent="true"
                />

                <View
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/unlock_circle"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"
                    ></View>


        </RelativeLayout>



</FrameLayout>
